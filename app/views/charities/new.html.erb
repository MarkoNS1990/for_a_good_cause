<div class="container-fluid">
    <div class='heading'>
        <%= link_to root_path do %>
        <i class="fas fa-chevron-circle-left"></i>
        <% end %>
        <h1 class='text-center'>Create a charity </h1>
    </div>

    <%= simple_form_for @charity do |f| %>
    <%= f.input :name , class:'form-control' %>
    <%= f.input :content ,class:'form-control'%><br>
    <%= f.submit 'Create' ,class:'btn btn-primary btn-block' %>
    <% end %>
</div>