<div class="container-fluid">
    <div class='heading'>
        <%= link_to root_path do %>
        <i class="fas fa-chevron-circle-left"></i>
        <% end %>
        <h1 class='text-center'>All charities</h1>
    </div>
    <div class='all-charities-heading'>
        <h3 class='text-center'>In total there are <%=@charities.count%> charities</h3>
        <%= link_to "Create charity", new_charity_path ,class:'btn btn-success btn-lg' %>
    </div>

    <div class='cards-container'>
        <% @charities.each do |charity|%>

        <div class="card text-center">
            <div class="card-header">
                Name of the charity: <%=charity.name %>
                <% if current_user.id == charity.user_id %>

                <%= link_to edit_charity_path(charity) ,class:'btn btn-primary' do %>
                <i class="fas fa-pencil-alt"></i>
                <%end%>


                <%= button_to "delete", charity_path(charity) ,class:'btn btn-danger', data: { confirm: "Are you sure?"}, method: :delete %>
                <%end%>
            </div>
            <div class="card-body">
                <h5 class="card-title">Created by: <%=charity.user.email %></h5>
                Content: <p class="card-text"><%=charity.content %></p>

                <%= donate_btn(charity) %>

                Total donations: $<%=charity.donations.count%>
            </div>
            <div class="card-footer">
                <%=charity.created_at.to_formatted_s(:long) %>
            </div>
        </div>
        <%end%>
    </div>





</div>